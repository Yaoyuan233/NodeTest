<%- include header %>

<div class="container">
<%if(user){%>
    <%if(user.username == post.author){%>
        <p style="color: slategrey">
            <span><a class="edit" href="/article/edit/<%= post.author %>/<%= post.title %>?id=<%=post._id%>">编辑</a></span>
            <span>|</span>
            <span><a class="edit" href="/article/delete?id=<%= post._id%>&author=<%= post.author%>">删除</a></span>
        </p>
    <%}%>
<%}%>
<p><h2><a href="#"><%= post.title %></a></h2></p>
<p class="info">
作者：<a href="/users/<%= post.author %>"><%= post.author %></a> |
日期：<%= post.publishTime %> |
浏览：<%= post.pv %>
评论数：<%= post.comments %>
</p>
<p><%- post.article %></p>

<%if(post.postImg) { %>
    <img src="/images/<%= post.postImg%>" alt="" style="width:100%;height:100%;">
<% } %>
</div>
<%- include comment %>
<%- include footer %>