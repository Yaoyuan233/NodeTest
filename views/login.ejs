<%- include header %>
<div class="list-group-item" style="padding: 5% 10%">
<form class="form-horizontal" role="form" method="POST">
    <div class="form-group">
        <label for="firstname" class="col-sm-2 control-label">用户名</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" name="username" placeholder="输入用户名">
        </div>
    </div>
    <div class="form-group">
        <label for="lastname" class="col-sm-2 control-label">密码</label>
        <div class="col-sm-8">
            <input type="password" class="form-control" name="password" placeholder="输入密码">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
            <input type="submit" class="btn btn-primary" value="登录" style="margin-left: 80%; width: 15%" />
        </div>
    </div>
</form>
</div>
<%- include footer %>  