<%if(user){%>
    <h3>评论区</h3>
    <form method="post" enctype="multipart/form-data">
        <div class="list-group-item">
            <span style="font-weight: bolder">我也来说两句</span>
            <br />
            <br />
            <div class="form-group">
                <textarea class="form-control" name="comment" rows="3"></textarea>
            </div>
            <input type="submit" value="发表" class="btn btn-primary" style="margin-left: 85%; width: 10%"/>
        </div>
    </form>
    <hr>
<%}%>
<ul class="list-group">
    <% comments.forEach(function(comment){%>
    <li class="list-group-item">
        <p class="info">
            <span>作者：<a href="/users/<%= post.author %>"><%= post.author %></a></span>
            <span>|</span>
            <span>日期：<%= comment.time %></span>
        </p>
        <p><%= comment.content %></p>
    </li>
    <hr>
    <%})%>
</ul>